<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.AppTheme.LikeCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/like_color_state_list</item>
    </style>

    <style name="Widget.AppTheme.SimpleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="strokeColor">@null</item>
        <item name="iconTint">@null</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.AppTheme.SimpleButton.OnlyIcon" parent="Widget.AppTheme.SimpleButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">?colorSurface</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="circleAvatar" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>